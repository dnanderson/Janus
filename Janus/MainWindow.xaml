<Window x:Class="Janus.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Janus"
        xmlns:viewModels="clr-namespace:Janus.ViewModels"
        mc:Ignorable="d"
        Title="Test Controller" Height="450" Width="800">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </Window.Resources>
    <Grid>
        <TabControl ItemsSource="{Binding Tabs}" SelectedItem="{Binding SelectedTab}">
            <TabControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Header}" />
                        <Button Content="r"
                                Command="{Binding CloseCommand}"
                                Visibility="{Binding IsClosable, Converter={StaticResource BooleanToVisibilityConverter}}"
                                Margin="5,0,0,0"
                                FontFamily="Marlett"
                                FontSize="10"
                                VerticalContentAlignment="Center"
                                Padding="2,0" />
                    </StackPanel>
                </DataTemplate>
            </TabControl.ItemTemplate>
        </TabControl>
    </Grid>
</Window>
